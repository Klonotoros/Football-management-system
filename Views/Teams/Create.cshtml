@model Projekt.Models.Team

@{
    ViewData["Title"] = "Create";
}

<h1>Utwórz drużynę</h1>

<h4>Drużyna</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa drużyny:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label">Wydział:</label>
                <input asp-for="Faculty" class="form-control" />
                <span asp-validation-for="Faculty" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> Aktywuj drużynę
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" style="margin-top:10px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" style="margin-top:10px;" asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
