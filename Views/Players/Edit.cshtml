@model Projekt.Models.Player

@{
    ViewData["Title"] = "Edytuj - ";
}

<h1>Edytuj zawodnika:</h1>

<h4>Zawodnik:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Imię:</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nazwisko:</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">Pozycja:</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">Drużyna:</label>
                <select asp-for="TeamId" class="form-control">
                    @foreach (var team in ViewBag.Teams)
                    {
                        @if(team.IsActive){
                            <option value="@team.Id">@team.Name</option>
                        }
                        
                    }
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" style="margin-top:10px;" value="Zapisz" class="btn btn-primary " />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" style="margin-top:10px" asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
