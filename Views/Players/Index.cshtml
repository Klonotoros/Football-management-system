@model IEnumerable<Projekt.Models.Player>

@{
    ViewData["Title"] = "Zawodnicy - ";
}

<h1>Zawodnicy:</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj zawodnika</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Imię:
            </th>
            <th>
                Nazwisko:
            </th>
            <th>
                Pozycja:
            </th>
            <th>
                Drużyna:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                    @if (item.Team != null && item.Team.IsActive)
                    {
                        @Html.DisplayFor(modelItem => item.Team.Name)
                    }
                    else
                    {
                        @Html.Raw("[BRAK]")
                    }
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" style:"margin-left:10px;" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Details" class="btn btn-primary" style:"margin-left:10px;" asp-route-id="@item.Id">Detale</a> |
                    <a asp-action="Delete" class="btn btn-primary" style:"margin-left:10px;" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
